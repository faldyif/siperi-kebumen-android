<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="id.go.kebumenkab.perizinan.siperikebumen.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo_kebumen"
        android:padding="15dp"
        android:layout_width="190dp"
        android:layout_height="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="SiPeri"
        android:id="@+id/app_title" />

    <TextView
        android:id="@+id/kebumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="italic"
        android:text="KEBUMEN" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/url_api"
            android:layout_margin="7dp"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_border_form"
            android:hint="URL API" />

        <EditText
            android:id="@+id/username"
            android:layout_margin="7dp"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_border_form"
            android:hint="Username" />

        <EditText
            android:layout_margin="7dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10dip"
            android:background="@drawable/rounded_border_form"
            android:hint="Password" />

        <id.go.kebumenkab.perizinan.siperikebumen.NoDefaultSpinner
            android:id="@+id/status"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_dropdown" />

        <Button
            android:layout_margin="7dp"
            android:id="@+id/button_login"
            android:text="LOGIN"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
